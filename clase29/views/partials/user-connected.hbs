<div class='card-container  green '>
    {{#with user}}
        <div>
            <h1 class="simple-title">Bienvenido {{username}}</h1>
        </div>
        <div class="simple-title">
            <h2>Email: {{email}}</h2>
        </div>
        <div class="flex simple-title">
            <h2>Image:</h2><img class="image-icon" src={{picture}}/>
        </div>
        <div class="separator">
            <form action="/user/logout" method="GET">
                <button type="submit" class="btn btn-warning"> Deslogear</button>
            </form>
        </div>
    {{/with}}
</div>