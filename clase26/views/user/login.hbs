<div class='card-container separator'>
    <h1 class="main-title">Login de Usuario</h1>
    <form class="form-horizontal" id="login_form" action="login" method="POST">
        <div class="form-group col-sm-12 ">
            <label for="user" class="col-sm-3 control-label"> Usuario:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="user_login" placeholder="User" name="username" required />
            </div>
        </div>
        <div class="form-group col-sm-12 ">
            <label for="password" class="col-sm-3 control-label"> Contrase√±a:</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" id="password_login" placeholder="Password" name="password" required />
            </div>
        </div>

        <div class="form-group button-submit">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Enviar</button>
                <button  class="btn btn-success"  onclick="location.href='/user/register'" >Register</button> 
            </div>
        </div>
    </form>
</div>


